<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Your Todos - Todo App</title>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <%- include('header') %>
  <main>
    <h2>Your Todos</h2>
    <table>
      <thead>
        <tr>
          <th>Task</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% todos.forEach(function(todo) { %>
          <tr>
            <td><%= todo.title %></td>
            <td><%= todo.completed ? 'Completed' : 'Pending' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  <%- include('footer') %>
</body>
</html>
